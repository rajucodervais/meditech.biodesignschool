<%- include('../partials/header') %>
<%- include('../partials/topnav') %>
<div id="layoutSidenav">
    <%- include('../partials/sidenav') %>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <div class="app-title">
                    <div>
                        <h1><i class="fa fa-user"></i> Admin > create</h1>
                    </div>
                    <ul class="app-breadcrumb breadcrumb">
                        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                    </ul>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <form>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="small mb-1" for="FirstName">First Name</label>
                                        <input required  class="form-control py-4" name="first_name" id="FirstName" type="text"
                                            placeholder="Enter first name" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="small mb-1" for="LastName">Last Name</label>
                                        <input required  class="form-control py-4" id="LastName" type="text" name="last_name"
                                            placeholder="Enter last name" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="email">Email</label>
                                <input required  class="form-control py-4" id="email" name="email" type="email"
                                    aria-describedby="emailHelp" placeholder="Enter email address" />
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="small mb-1" for="username">Username</label>
                                        <input required  class="form-control py-4" name="username" id="username" type="text" placeholder="Enter Username" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="small mb-1" for="password">Password</label>
                                        <input required  class="form-control py-4" id="password" type="password" name="password"                           placeholder="Enter password" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="small mb-1" for="ConfirmPassword">Confirm Password</label>
                                        <input required  class="form-control py-4" id="ConfirmPassword" type="password"
                                            placeholder="Confirm password" name="cpassword"  />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-4 mb-0">
                                <button class="btn btn-primary" type="submit">Create Account</button>
                                <button class="btn red" type="reset">Reset</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<%- include('../partials/footer') %>