<%- include('../partials/header') %>
<%- include('../partials/topnav') %>
<div id="layoutSidenav">
    <%- include('../partials/sidenav') %>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <div class="app-title card card-content">
                    <div>
                        <h1><i class="fa fa-user"></i> Admin</h1>
                    </div>
                    <ul class="app-breadcrumb breadcrumb">
                        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                    </ul>
                </div>
                <div class="card mb-4">
                    <div class="card-content">
                        <div class="msg">
                            <% if (typeof Msg != 'undefined' && Msg) { %>
                                <div class="alert alert-success"><%- Msg %></div>
                            <% } else if(typeof ErrorMsg != 'undefined' && ErrorMsg) { %>
                                <div class="alert alert-danger"><%- ErrorMsg %></div>
                            <% } %>
                        </div>
                        <div class="card-title  text-right">
                            <a href="/admin/create" class="waves-effect blue darken-1 waves-light btn"><i class="fa fa-plus"></i> Add Admin</a>
                        </div>
                        <br>
                        <table class="responsive-table highlight" id="post-table" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% if(result.length > 0){%>
                                <% result.forEach(function(data) { %>
                                    <tr>
                                        <td><%= data.id%></td>
                                        <td><%= data.first_name%></td>
                                        <td><%= data.last_name%></td>
                                        <td><%= data.email%></td>
                                        <td style="display: inline-flex;">
                                            <a href="/admin/edit/<%= data.id%>" class="waves-effect blue darken-1 waves-light btn"><i class="fa fa-edit"></i></a>
                                            <a href="/admin/destroy/<%= data.id%>" class="waves-effect red waves-light btn"><i class="fa fa-trash" onclick=" return confirm('Are you sure to delete this row ')? true:false"></i></a>
                                        </td>
                                    </tr>
                                <% }); %>
                                <%}else{%>
                                  <tr class="text-center"><td colspan="6"  style="text-align: center;"> No data Available</td></tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<%- include('../partials/footer') %>
<script>
    $(document).ready(function () {
        $('#post-table').DataTable();
    })
</script>
<style>
    #post-table_length label {
        display: inline-flex !important;
        color: black;
    }
    
    #post-table_length label select{
        display: block !important;
        margin-left: 10px;
        margin-right: 10px;
        height: auto;
    }
    #post-table_filter label{
        display: inline-flex !important;
        color: black;
    }
    #post-table_filter input{
        margin-left: 10px;
        height: auto;
    }
</style>